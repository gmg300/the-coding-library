{{> navbar-full}}
<section class="section">
    <div class="container content-size">
        <h1 id="create-title" class="title has-text-centered"><i class="fas fa-plus"></i> Create Resource</h1>
        <div class="columns">
            <div class="column form-container">
                <div class="field">
                    <label class="label">Name</label>
                    <div class="control has-icons-left">
                        <input id="name-input" class="input" type="text" placeholder="Resource name">
                        <span class="icon is-small is-left">
                            <i class="fas fa-bookmark"></i>
                        </span>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Link</label>
                    <div class="control has-icons-left">
                        <input id="link-input" class="input" type="text" placeholder="Enter url">
                        <span class="icon is-small is-left">
                            <i class="fas fa-link"></i>
                        </span>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Description</label>
                    <div class="control">
                        <textarea id="description-input" class="textarea"
                            placeholder="What does this learning resource cover?"></textarea>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Tags</label>
                    <div id="added-tag-list" class="buttons">
                    </div>
                </div>
                <div class="field has-addons full-tag-list">
                    <div class="control has-icons-left">
                        <div class="select is-fullwidth">
                            <select id="tag-select" name="tag" placeholder="search by tag">
                                {{#each tags}}
                                {{> tag}}
                                {{/each}}
                            </select>
                        </div>
                        <div class="icon is-small is-left">
                            <i class="fas fa-tag"></i>
                        </div>
                    </div>
                    <div class="control">
                        <button id="add-tag-btn" class="button"><strong>Add Tag</strong></button>
                    </div>
                </div>
                <div class="field is-grouped">
                    <div class="control">
                        <a id="create-resource" class="button">
                            <span><strong>Create Resource</strong></span>
                            <span class="icon">
                                <i class="fas fa-plus"></i>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>